<ul id="lists">
  <% each_by_status(@lists) do |list| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= list[:id] %>">
        <h2><%= list[:name] %></h2>
        <p><%= "#{list[:todos_remaining_count]} / #{list[:todos_count]}" %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <div class="actions"><a href="/lists/new" class="add">New List</a></div>
<% end %>