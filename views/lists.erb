<ul id="lists">
  <% @lists.each_with_index do |list, idx| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= idx %>">
        <h2><%= list[:name] %></h2>
        <p><%= "#{incomplete_todos_count(list)} / #{todos_count(list)}" %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <div class="actions"><a href="/lists/new" class="add">New List</a></div>
<% end %>