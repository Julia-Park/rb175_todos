<form action="/lists/<%= @id %>/edit" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the <%= @list[:name] %> todo list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="New List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @id %>">Cancel</a>
  </fieldset>
</form>