<div id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><button class="check">Complete All</button></li>
      <li><a href="/lists/<%= @id %>/edit" class="edit">Edit List</a></li>
    </ul>
  </header>

  <ul>
    <% @list[:todos].each do |todo| %>
      <li><h2><%= todo %></h2></li>
    <% end %>
  </ul>

  <form action="/lists/<%= @id %>" method="post">
  <dl>
    <dt>
      <label for="todo_item">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo_item" placeholder="Todo text" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
  </form>
</div>

<% content_for :header_links do %>
  <div class="actions"><a class="list" href="/lists">All Lists</a></div>
<% end %>